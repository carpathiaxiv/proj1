<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= button_to "Create New Pokemon", new_pokemon_path(id: current_trainer.id), :class => "button medium", :method => :get%>
<% @trainer.pokemons.each do |pokemon|%>
	<p>pokemon name is: <%= pokemon.name %> , has level : <%= pokemon.level %> , has health:  <%= pokemon.health %></p>
	<%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
	<% if pokemon.health==0 %>
		<% pokemon.destroy%>
	<%end%>
	
<% end %>
